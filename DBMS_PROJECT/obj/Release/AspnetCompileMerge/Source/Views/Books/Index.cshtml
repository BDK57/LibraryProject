@model IEnumerable<DBMS_PROJECT.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = " btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author.AuthorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author.AuthorName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BookID }, new { @class = " btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id=item.BookID }, new { @class = " btn btn-sucess" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BookID }, new { @class = " btn btn-danger" })
        </td>
    </tr>
}

</table>
